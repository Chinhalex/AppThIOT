<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <RelativeLayout
        android:id="@+id/bg_main1"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@drawable/bg_main"
        android:gravity="center">

        <RelativeLayout
            android:id="@+id/nhietdo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp">

            <ImageView
                android:id="@+id/img_nhietdo"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_nhietdo" />

            <TextView
                android:id="@+id/nhietdo1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:layout_toRightOf="@+id/img_nhietdo"
                android:fontFamily="@font/regular"
                android:text="TEMP"
                android:textColor="@color/black"
                android:textSize="30dp"></TextView>

            <TextView
                android:id="@+id/nhietdo2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@+id/img_nhietdo"
                android:fontFamily="@font/regular"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="30dp"></TextView>
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/doam"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_toRightOf="@+id/nhietdo">

            <ImageView
                android:id="@+id/img_doam"
                android:layout_width="60dp"
                android:layout_height="60dp"
                android:layout_marginStart="30dp"
                android:layout_marginTop="30dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_doam"></ImageView>

            <TextView
                android:id="@+id/doam1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="60dp"
                android:layout_toRightOf="@+id/img_doam"
                android:fontFamily="@font/regular"
                android:text="HUMI"
                android:textColor="@color/black"
                android:textSize="30dp"></TextView>

            <TextView
                android:id="@+id/doam2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="15dp"
                android:layout_marginTop="70dp"
                android:layout_toRightOf="@+id/img_doam"
                android:fontFamily="@font/regular"
                android:text="20"
                android:textColor="@color/black"
                android:textSize="30dp"></TextView>
        </RelativeLayout>


    </RelativeLayout>

    <FrameLayout
        android:id="@+id/bg_main2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/bg_main1"
        android:layout_marginHorizontal="40dp"
        android:layout_marginTop="5dp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:gravity="center"
            android:layout_marginTop="30dp">

            <TextView
                android:id="@+id/txtled"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Control Led"
                android:textColor="@color/black"
                android:textSize="20dp"
                android:textStyle="bold" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnonled"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="20dp"
            android:layout_marginTop="100dp"
            android:background="@drawable/ic_tron">

            <TextView
                android:id="@+id/den1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="ON"
                android:textColor="@color/black"></TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/btnoffled"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="100dp"
            android:layout_toRightOf="@+id/khung2"
            android:background="@drawable/ic_tron">

            <TextView
                android:id="@+id/den3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="OFF"
                android:textColor="@color/black"></TextView>

        </RelativeLayout>


    </FrameLayout>


</RelativeLayout>